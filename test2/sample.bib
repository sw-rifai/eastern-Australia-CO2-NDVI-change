@article{ainsworthResponsePhotosynthesisStomatal2007,
  title = {The Response of Photosynthesis and Stomatal Conductance to Rising [{{CO}} {\textsubscript{2}} ]: Mechanisms and Environmental Interactions: {{Photosynthesis}} and Stomatal Conductance Responses to Rising [{{CO}} {\textsubscript{2}} ]},
  shorttitle = {The Response of Photosynthesis and Stomatal Conductance to Rising [{{CO}} {\textsubscript{2}} ]},
  author = {Ainsworth, Elizabeth A. and Rogers, Alistair},
  date = {2007-03},
  journaltitle = {Plant, Cell \& Environment},
  volume = {30},
